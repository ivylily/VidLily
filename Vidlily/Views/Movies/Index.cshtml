@model IEnumerable<Vidlily.Models.Movie>
@{
    ViewBag.Title = "List";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.Any())
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Movie</th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @movie.Name
                </td>
            </tr>
        }
    </table>

}
else
{
    <p>We don't have any customers yet</p>
}



